<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.UI.TelaSobre"
             Title="TelaSobre"
             NavigationPage.HasNavigationBar="False">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Spacing="10">
        
        <Label 
            Text="Desenvolvedor"
            TextColor="{StaticResource Primary}"
            FontFamily="PlayBold"
            FontSize="40"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="perfil.png"
               HeightRequest="150"
               Aspect="AspectFit" />

        <Label Text="Paulo"
               TextColor="{StaticResource Primary}"
               FontFamily="PlayBold"
               FontSize="30"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />

        <Label Text="Projeto desenvolvido em 2025"
               TextColor="{StaticResource Primary}"
               FontFamily="PlayBold"
               FontSize="20"
               VerticalOptions="Center" 
               HorizontalOptions="Center" Margin="50" />

        <Button Text="Voltar" Clicked="Voltar" 
                TextColor="{StaticResource White}" 
                BackgroundColor="{StaticResource Primary}" 
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>