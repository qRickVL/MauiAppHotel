<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.UI.TelaInicial"
             Title="TelaInicial"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray950}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">
        
        <Label  Text="Calculo da Diaria"
                FontFamily="PlayBold"
                FontSize="45"
                TextColor="{StaticResource Primary}" />

        <Frame Padding="10" BackgroundColor="{StaticResource Gray950}">

            <VerticalStackLayout Spacing="10">

                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2+*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:" />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference StpAdultos}" />

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="StpAdultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:" />

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference StpCriancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="StpCriancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                </Grid>

                <Label Text="Escolha sua Suite" />

                <Picker x:Name="PckSuite"
                        Title="Selecione sua Acomodação" />

                <Frame Padding="10"
                       Margin="10"
                       BackgroundColor="{StaticResource Gray950}">

                    <VerticalStackLayout>

                        <Label Text="Periodo da Estadia" />
                        
                        <HorizontalStackLayout>

                            <Label Text="Check-in:" />
                            <DatePicker x:Name="DtpckCheckin"
                                        Format="dd/mm/yyyy" />

                        </HorizontalStackLayout>

                        <HorizontalStackLayout>

                            <Label Text="Check-out:" />
                            <DatePicker x:Name="DtpckCheckout"
                                        Format="dd/mm/yyyy" />

                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                    
                </Frame>

                <Button Text="Avançar" 
                        TextColor="{StaticResource White}"
                        BackgroundColor="{StaticResource Primary}" />

                <Button Text="Sobre"
                        TextColor="{StaticResource White}"
                        BackgroundColor="{StaticResource Primary}" />

            </VerticalStackLayout>
            
        </Frame>
        
    </VerticalStackLayout>

</ContentPage>